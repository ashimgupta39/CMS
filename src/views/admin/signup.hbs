<div class="col-lg-5 w-250" style="width: 700px;">
    
    <div class="card primecolor text-center card-form">
        <div class="card-body">
            <h2 style="text-align:center;" class="text-primary">SignUp Page</h2>
            <form action="/registeruser" method="POST">
                <div style="text-align: left;">Name</div>
                <input name="Name" type="text" class="form-control form-group form-control-lg"  > 
                <div style="text-align: left;">Email</div>
                <input value="{{email}}" name="email" type="email"   class="form-control form-group form-control-lg"   >
                <div style="text-align: left;">Your Mobile Number</div>
                <input name="phoneno" type="number" length="10"  class="form-control form-group form-control-lg" >  
        <div style="text-align: left;">Password</div>
         <input value="{{password}}" name="passwd" type="password"  class="form-control form-group form-control-lg" > 
         <div style="text-align: left;">Your Gender</div>
         <select name="gender" class="form-control form-group form-control-lg">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Others">Others</option>
        </select>

         <div style="text-align: left;">Choose Your Unit</div>
         <select name="units" class="form-control form-group form-control-lg">
             {{#each units as |u|}}
                <option value="{{u.UnitID}}">{{u.UnitName}}</option>
            {{/each}}
        </select>
         <div style="text-align: left;">Choose Your Department</div>
         <select name="depts" class="form-control form-group form-control-lg">
             {{#each depts as |d|}}
                <option value="{{d.DeptID}}">{{d.DeptName}}</option>
            {{/each}}
        </select>
         <div style="text-align: left;">Select the User Type</div>
         <select name="usertype" class="form-control form-group form-control-lg">
            <option value="Admin">Admin</option>
            <option value="Enduser">End User</option>
            <option value="Normaluser">Normal User</option>
            <option value="Superuser">Super User</option>
            <option value="ITinfrastructure">IT Infrastructure</option>
        </select>
         <input type="submit" class="btn bg-primary text-light btn-block">
        </div>
            </form>
        </div>
