    <div class="container">
        <div class="row py-5">
            <div class="col-lg-4"></div>
<div class="col-lg-5 w-250" style="width: 700px;">
    
    <div class="card primecolor text-center card-form">
        <div class="card-body">
            <h2 style="text-align:center;" class="text-primary">Edit Asset</h2>
            <form action="/assetedit" method="POST" id="frm">
                <input name="assetid" type="hidden" value="{{#each asset as |a|}}{{a.AssetID}}{{/each}}" class="form-control form-group form-control-lg" >  
                <div style="text-align: left;">Choose the Type of the Asset</div>
                    <select name="type" value="{{#each asset as |a|}}{{a.TypeID}}{{/each}}" class="form-control form-group form-control-lg">
                        {{#each types as |t|}}
                            <option value="{{t.TypeID}}">{{t.TypeDesc}}</option>
                        {{/each}}
                    </select>
                <div style="text-align: left;">Describe the Asset Specifications</div>
                <textarea name="specs" class="form-control form-group form-control-lg" form="frm">{{#each asset as |a|}}{{a.AssetDesc}}{{/each}}</textarea>
                <div style="text-align: left;">Enter the Model of the Asset</div>
                <input name="model" value="{{#each asset as |a|}}{{a.Model}}{{/each}}" type="text" class="form-control form-group form-control-lg"   >
                <div style="text-align: left;">Enter the Serial No. of the Asset</div>
                <input name="serialno" type="text" value="{{#each asset as |a|}}{{a.SerialNo}}{{/each}}" class="form-control form-group form-control-lg" >  
                <div style="text-align: left;">Enter the Asset No. of the Asset</div>
                <input name="assetno" type="text" value="{{#each asset as |a|}}{{a.AssetNo}}{{/each}}" class="form-control form-group form-control-lg" >  
                <div style="text-align: left;">Choose the Brand of the Asset</div>
                    <select name="brand" value="{{#each asset as |a|}}{{a.BrandID}}{{/each}}" class="form-control form-group form-control-lg">
                        {{#each brands as |b|}}
                            <option value="{{b.BrandID}}">{{b.BrandDesc}}</option>
                        {{/each}}
                    </select>
                <div style="text-align: left;">Choose the Location for the Asset</div>
                    <select name="location" class="form-control form-group form-control-lg">
                        {{#each locs as |l|}}
                            <option value="{{l.LocationID}}">{{l.LocationDesc}}</option>
                        {{/each}}
                    </select>
                <div style="text-align: left;">Choose Department</div>
                <select name="depts" class="form-control form-group form-control-lg">
                    {{#each depts as |d|}}
                        <option value="{{d.DeptID}}">{{d.DeptName}}</option>
                    {{/each}}
                </select>
                <div style="text-align: left;">Enter Purchase Date of the Asset</div>
                <input name="purchasedate" value="{{#each asset as |a|}}{{dateFormat a.PurchaseDate format='DD/MM/YYYY'}}{{/each}}" type="date" class="form-control form-group form-control-lg" > 

                <div style="text-align: left;">Select the Condition of the Asset</div>
                <select name="condition" class="form-control form-group form-control-lg">
                    <option value="1">Working</option>
                    <option value="2">Not Working</option>
                </select>
                <div style="text-align: left;">Select the Quantity of Assets</div>
                <input name="qty" value="{{#each asset as |a|}}{{a.Qty}}{{/each}}" type="number" class="form-control form-group form-control-lg" > 
         <input type="submit" value="Update" class="btn bg-primary text-light btn-block">
                <br>
                
        </div>
            </form>
        </div>
    </div>
        </div>
        <div class="col-lg-4"></div>
    </div>
    
